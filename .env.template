# Environment variables template
# Copy this to .env and fill in your values

# MongoDB Configuration
MONGODB_URL=mongodb://admin:password123@mongodb:27017/medical_comparator?authSource=admin

# OpenAI API Key for AI/LangChain integration
OPENAI_API_KEY=your_openai_api_key_here

# LangFun API Configuration (if using)
LANGFUN_API_KEY=your_langfun_api_key_here
LANGFUN_API_URL=https://api.langfun.com/v1

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here

# External APIs
TESSERACT_CMD=/usr/bin/tesseract

# Data Configuration
# Path to the directory containing sample data CSV files
# Leave empty for auto-detection (recommended)
# Example: DATA_PATH=/path/to/your/data/directory
DATA_PATH=